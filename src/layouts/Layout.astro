---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';


const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-VWGPNRPYK3"></script>
            <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-VWGPNRPYK3');
        </script>
	</head>
	<body class="md:container mx-auto min-h-screen relative ">
        
		<Header title={title} />
		<main class="py-10 md:px-20 md:mx-15 lg:px-20 lg:mx-20 ">
			<slot />
		</main>
		<Footer />
	</body>
</html>